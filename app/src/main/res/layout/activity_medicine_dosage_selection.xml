<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="#ccecee">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Dosage AmountðŸ§ª"
        android:layout_gravity="center"
        android:textSize="32sp"
        android:fontFamily="@font/playfair_display_bold"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"/>

    <EditText
        android:id="@+id/editTextDosage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:digits="0123456789."
        android:hint="Enter dosage (e.g., 2.5)"
        android:inputType="number"
        android:minHeight="48dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remind me when stock is low at:"
        android:textSize="30sp"
        android:fontFamily="@font/playfair_display_bold"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="20dp"/>

    <EditText
        android:id="@+id/editTextLowStock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="e.g., 5 doses left"
        android:inputType="number"
        android:minHeight="48dp" />

    <Button
        android:id="@+id/btnSaveDosage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save &amp; Finish"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        android:backgroundTint="#0000"
        android:textSize="36sp"/>

</LinearLayout>
